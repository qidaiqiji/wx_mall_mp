/* pages/headlineNews/headlineNews.wxss */

page {
  background: #f3f3f3;
}

.main {
  margin-top: 4rpx;
}

.msgItem {
  width: 702rpx;
  margin: 0 auto;
  background: rgba(255, 255, 255, 1);
  border-radius: 20rpx;
  margin-top: 20rpx;
  overflow: hidden;
  display: flex;
  flex-wrap: wrap;
}

.msg_title {
  width: 702rpx;
  height: 88rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.msg_title>view:nth-child(1) {
  width: 546rpx;
  height: 26rpx;
  font-size: 26rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(47, 58, 64, 1);
  line-height: 26rpx;
  margin-left: 26rpx;
  overflow: hidden;
}

.new_icon {
  width: 40rpx;
  height: 28rpx;
  background: rgba(255, 51, 102, 1);
  border-radius: 4rpx;
  margin-right: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-family: PingFangSC-Light;
  font-weight: 300;
  color: rgba(255, 255, 255, 1);
}

.msg_desc {
  width: 702rpx;
}

.msg_desc_brand {
  width: 100%;
  height: 132rpx;
  display: flex;
}

.brand_img {
  margin: 10rpx 60rpx 0 58rpx;
  width: 108rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.brand_img>image {
  width: 108rpx;
  max-height: 80rpx;
}

.brand_title {
  margin-top: 10rpx;
  width: 400rpx;
  height: 28rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(47, 58, 64, 1);
  line-height: 28rpx;
  overflow: hidden;
}

.brand_desc {
  margin-top: 20rpx;
  width: 382rpx;
  height: 24rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(136, 150, 150, 1);
  line-height: 24rpx;
  overflow: hidden;
}

.desc_banner {
  width: 702rpx;
  height: 328rpx;
  padding: 0 20rpx;
}

.desc_banner>image {
  width: 662rpx;
  height: 296rpx;
}

.ToDetail {
  width: 702rpx;
  height: 68rpx;
  background: rgba(255, 255, 255, 1);
  padding: 0 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-top: 1rpx solid #dce4e6;
}

.ToDetail_left {
  height: 24rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(136, 150, 150, 1);
  line-height: 24rpx;
  display: flex;
}

.ToDetail_left>view:nth-child(1) {
  margin-right: 10rpx;
}

.ToDetail_right {
  height: 24rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(136, 150, 150, 1);
  line-height: 24rpx;
  display: flex;
  align-items: center;
}

.ToDetail_right>image {
  margin-left: 8rpx;
  width: 30rpx;
  height: 30rpx;
}
