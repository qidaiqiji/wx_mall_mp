/* pages/miaosha/miaosha.wxss */

page {
  background: #f3f3f3;
}

.banner_ad {
  width: 100%;
  height: 486rpx;
  background: linear-gradient(90deg, rgba(249, 83, 38, 1), rgba(253, 67, 89, 1));
}

.banner_swiper {
  width: 750rpx;
  height: 333rpx;
}

.banner_swiper_wrap {
  padding-top: 20rpx;
}

.banner_bottom_wrap {
  width: 750rpx;
  height: 130rpx;
  background: linear-gradient(90deg, rgba(249, 83, 38, 1), rgba(253, 67, 89, 1));
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.banner_bottom_flexd {
  position: fixed;
  left: 0rpx;
  top: 0rpx;
  z-index: 10;
}

.classification {
  display: flex;
  width: 750rpx;
  height: 32rpx;
  margin-top: 22rpx;
  margin-bottom: 24rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(255, 255, 255, 0.5);
}

.classification>view {
  width: 50%;
  height: 32rpx;
  text-align: center;
  line-height: 32rpx;
}

.banner_time_wrap {
  display: flex;
}

.classification>view:nth-child(1) {
  border-right: 1rpx solid rgba(255, 255, 255, 0.5);
}

.classification_two {
  font-size: 32rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
}

.banner_time_wrap>view:nth-child(1) {
  font-size: 22rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
}

.banner_time_wrap>view:nth-child(2) {
  width: 63rpx;
  height: 28rpx;
  background: rgba(255, 137, 1, 1);
  border-radius: 4rpx;
  line-height: 28rpx;
  text-align: center;
  font-size: 26rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
}

.banner_time_wrap>view:nth-child(3) {
  font-size: 22rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  margin-left: 4rpx;
}

.goods_title {
  display: flex;
  align-items: center;
  margin-left: 24rpx;
  height: 88rpx;
  margin-top: 24rpx;
}

.goods_title image {
  width: 44rpx;
  height: 44rpx;
}

.goods_title view {
  line-height: 36rpx;
  margin-left: 6rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: rgba(47, 58, 64, 1);
}

.navigation_button {
  position: fixed;
  top: 50%;
  right: 0;
  transform: translateY(-50%);
  z-index: 30;
}

.navigation_button>image {
  width: 66rpx;
  height: 186rpx;
}

.allNoGoods {
  text-align: center;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 48rpx;
  padding-bottom: 20rpx;
}

.allNoGoods>image {
  width: 560rpx;
  height: 560rpx;
}

.allNoGoods>view {
  height: 24rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(212, 212, 212, 1);
  line-height: 24rpx;
  margin-top: 24rpx;
}
.navigation_button {
  position: fixed;
  right: 0rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 64rpx;
  height: 186rpx;
  z-index: 6;
}

.navigation_button>image {
  width: 64rpx;
  height: 186rpx;
}