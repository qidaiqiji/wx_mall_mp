/* pages/self/helpCenter/helpCenter.wxss */

page {
  background: #f3f3f3;
}
.address_container{
  width: 100%;
  margin-bottom: 152rpx;
}
.addr_item {
  width: 100%;
  height: 156rpx;
  padding-left: 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #fff;
  border-top: 1rpx solid #dce4e6;
}

.addr_item_left {
  width: 620rpx;
  padding-right: 6rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.item_left_top {
  width: 100%;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  font-family: PingFang-SC-regular;
  font-weight: 400;
  color: rgba(47, 58, 64, 1);
}

.item_left_top view:nth-child(2) {
  margin-left: 18rpx;
  font-size: 28rpx;
  font-family: PingFang-SC-Heavy;
  font-weight: 800;
  color: rgba(47, 58, 64, 1);
}

.item_left_bottom {
  font-size: 28rpx;
  font-family: PingFang-SC-regular;
  font-weight: 400;
  color: rgba(136, 150, 150, 1);
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.addr_item_right {
  flex: 1;
  padding-right: 24rpx;
  font-size: 28rpx;
  font-family: PingFang-SC-regular;
  font-weight: 400;
  color: rgba(255, 51, 102, 1);
  text-align: end;
  height: 100rpx;
  line-height: 100rpx;
}

.fixed_bottom {
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.fixed_tip {
  width: 100%;
  height: 54rpx;
  line-height: 54rpx;
  font-size: 24rpx;
  font-family: PingFang-SC-regular;
  font-weight: 400;
  color: rgba(136, 150, 150, 1);
  text-align: center;
  background: #F3F3F3;
}

.fixed_addAddr {
  width: 100%;
  height: 98rpx;
  line-height: 98rpx;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-family: PingFang-SC-regular;
  font-weight: 400;
  color: rgba(255, 51, 102, 1);
}

.fixed_addAddr image {
  width: 30rpx;
  height: 30rpx;
}

.isDefault{
  width:58rpx;
height:30rpx;
line-height: 30rpx;
margin-left: 16rpx;
border:2rpx solid rgba(0,135,234,1);
border-radius:4rpx;
font-size:20rpx;
font-family:PingFang-SC-regular;
font-weight:400;
color:rgba(0,135,234,1);
text-align: center;
}