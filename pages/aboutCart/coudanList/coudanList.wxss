.main{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}
.searchHead{
  margin-top: 10rpx;
  margin-bottom: 13rpx;
}
.searchTip{
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 6;
  background: #fff;
}
.coundanContainer{
  width: 100%;
  margin-top: 98rpx;
  margin-bottom: 98rpx;
}
.addMargin{
  margin-top:176rpx;
}

/* //底部样式 */
.bottom_fixed {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 98rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
  z-index: 6;
}

.fixed_left {
  margin-left: 19rpx;
  flex: 1;
  color: #889696;
  font-size: 24rpx;
  position: relative;
}

.left_price {
  color: #f36;
  font-size: 30rpx;
  font-weight: bold;
  text-indent: 0rpx;
}

.left_price::before {
  left: 0rpx;
  content: '￥';
  font-size: 24rpx;
  color: #f36;
  font-weight: normal;
}

.fixed_right {
  width: 240rpx;
  height: 98rpx;
  line-height: 98rpx;
  text-align: center;
  background: #f36;
  color: #fff;
  font-weight: bold;
  font-size: 32rpx;
}
/* //底部样式结束 */

.loadingMain {
  width: 100%;
  height: 300rpx;
  position: fixed;
  top: 50%;
  left: 50%;
}

.loadingIcon {
  width: 100rpx;
  height: 100rpx;
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}
.noGoodsItem {
  width: 100%;
}

.noGoodsItem_img {
  width: 314rpx;
  height: 180rpx;
  margin: 0 auto;
  margin-top: 200rpx;
  margin-left: 50%;
  transform: translateX(-50%);
}

.noGoodsItem_txt {
  width: 232px;
  font-size: 26rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(212, 212, 212, 1);
  margin: 0 auto;
  text-align: center;
}