/* pages/myCollection/myCollection.wxss */
page {
    background: #F3F3F3;
}

.wrap {
    width: 750rpx;
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    margin-bottom: 64rpx;
}

.list_wrap {
    width: 702rpx;
    background: rgba(255, 255, 255, 1);
    border-radius: 20rpx;
    overflow: hidden;
    margin-top: 20rpx;
}

.list_top_left>view {
    width: 400rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
}

.list_top_left {
    font-size: 32rpx;
    font-family: PingFangSC-Regular;
    font-weight: 400;
    color: rgba(47, 58, 64, 1);
    display: flex;
    justify-content: center;
}

.list_top_right {
    font-size: 24rpx;
    font-family: PingFangSC-Regular;
    font-weight: 400;
    color: rgba(178, 178, 178, 1);
}

.list_top_left,
.list_top_right {
    display: flex;
    align-items: center;
}

.icon_top_left {
    width: 44rpx;
    height: 44rpx;
    margin-right: 10rpx;
}

.icon_top_right {
    width: 20px;
    height: 20px;
    margin-right: 2rpx;
}

.list_top {
    width: 702rpx;
    height: 78rpx;
    display: flex;
    justify-content: space-between;
    padding-left: 20rpx;
    padding-right: 20rpx;
}

.list_conter {
    width: 702rpx;
    font-size: 28rpx;
    font-family: PingFangSC-Regular;
    font-weight: 400;
    color: rgba(136, 150, 150, 1);
    line-height: 38rpx;
    padding-left: 20rpx;
    padding-right: 24rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    margin-bottom: 26rpx;
}

.left_bottom {
    width: 702rpx;
    height: 60rpx;
    background: rgba(255, 255, 255, 1);
    font-size: 24rpx;
    font-family: PingFangSC-Regular;
    font-weight: 400;
    color: rgba(178, 178, 178, 1);
    display: flex;
    justify-content: flex-end;
    align-items: center;
    padding-right: 20rpx;
}