/* pages/self/integral/integralDataDetail/integralDataDetail.wxss */
page {
  background: #f3f3f3;
}

.container {
  width: 100%;
}

.header {
  width: 100%;
  height: 98rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 0 24rpx;
  background: #fff;
  font-size: 28rpx;
  font-family: PingFang-SC-regular;
  font-weight: 400;
  color: rgba(47, 58, 64, 1);
  position: fixed;
  top: 0;
  border-top:1rpx solid #dce4e6;
}
.header_title{
  height: 98rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: center;
}
.handle_line{
  width: 46rpx;
  height: 4rpx;

  margin-top: 32rpx;
}
.on_title{
  font-size:32rpx;
font-family:PingFang-SC-medium;
font-weight:500;
color:rgba(255,51,102,1);
}
.on{
  background: #ff3366;

}
.main{
  width: 100%;
    margin-top: 130rpx;
}
.integralItem{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 24rpx;
  background: #fff;
  width: 100%;
  border-bottom:1rpx solid #dce4e6;
}
.integralItem_left{
  display: flex;
  flex-direction: column;
}
.item_title{
  font-size:28rpx;
font-family:PingFang-SC-medium;
font-weight:500;
color:rgba(47,58,64,1);
margin-bottom: 4rpx;
}
.item_amount{
margin-top: 20rpx;
}
.item_amount,.item_sn{
  font-size:26rpx;
font-family:PingFang-SC-Medium;
font-weight:500;
color:rgba(136,150,150,1);
margin-bottom: 8rpx;
}
.item_date{
  margin-top: 8rpx;
  font-size:24rpx;
font-family:PingFang-SC-regular;
font-weight:400;
color:rgba(178,178,178,1);
}
.integralItem_right{
  font-size:32rpx;
font-family:PingFang-SC-Bold;
font-weight:bold;
color:rgba(255,51,102,1);
}
.expend{
color:rgba(47,58,64,1);
}


.remindlist_bottom_B {
  width: 750rpx;
  height: 90vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  overflow: hidden;
}

.remindlist_bottom_img {
  width: 314rpx;
  height: 179rpx;
}
.remindlist_bottom_txt {
  font-size: 26rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(212, 212, 212, 1);
  line-height: 48rpx;
  margin-top: 28rpx;
}
