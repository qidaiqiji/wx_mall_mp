/* pages/self/integral/integralOrderList/integralOrderList.wxss */

page {
  background: #f3f3f3;
}

.container {
  width: 100%;
  margin-bottom: 78rpx;
  margin-top: 54rpx;
}

.integralOrderItem {
  width: 702rpx;
  margin: 24rpx 0rpx 0rpx;
  background: #fff;
  border-radius: 20rpx;
}

.integralOrderItem_date {
  height: 88rpx;
  line-height: 88rpx;
  font-size: 28rpx;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: rgba(47, 58, 64, 1);
  padding-left: 24rpx;
}

.orderItem_date {
  font-size: 24rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(136, 150, 150, 1);
  margin-left: 32rpx;
}

.item_desc {
  display: flex;
  align-items: center;
  padding: 24rpx 24rpx 40rpx;
  border-bottom: 1rpx solid #dce4e6;
}

.desc_img {
  width: 146rpx;
  height: 112rpx;
}

.desc_img image {
  width: 146rpx;
  max-height: 112rpx;
}

.desc_msg {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.desc_msg_title {
  flex: 1;
  font-size: 26rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(47, 58, 64, 1);
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.desc_msg_show {
  margin-top: 40rpx;
  font-size: 22rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(136, 150, 150, 1);
}

.msg_show_bottom {
  display: flex;
  justify-content: space-between;
}

.item_status {
  height: 74rpx;
  line-height: 74rpx;
  padding-right: 24rpx;
  text-align: end;
  font-size: 28rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
}

.item_status_end {
  color: rgba(58, 68, 74, 1);
}

.item_status_await {
  color: rgba(255, 51, 102, 1);
}

.fixedBottom {
  width: 100%;
  height: 54rpx;
  line-height: 54rpx;
  font-size: 24rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(255, 51, 102, 1);
  text-align: center;
  position: fixed;
  top: 0;
  background: #fff;
}

.remindlist_bottom_B {
  width: 750rpx;
  height: 90vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  overflow: hidden;
}

.remindlist_bottom_img {
  width: 314rpx;
  height: 179rpx;
}
.remindlist_bottom_txt {
  font-size: 26rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(212, 212, 212, 1);
  line-height: 48rpx;
  margin-top: 28rpx;
}