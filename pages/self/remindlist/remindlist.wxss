/* pages/remindlist/remindlist.wxss */
page {
    background: #f3f3f3;
}

.tabs {
    height: 98rpx;
    width: 140rpx;
    line-height: 94rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.on {
    font-size: 32rpx;
    font-family: PingFang-SC-Bold;
    font-weight: bold;
    color: rgba(255, 51, 102, 1);
}

.tabBottom {
    width: 46rpx;
    height: 4rpx;
    background: rgba(255, 51, 102, 1);
    border-radius: 2rpx;
}

.remindlist_wrap2 {
    margin-top: 118rpx;
    background: #fff;
}

.remindlist_tap {
    position: fixed;
    z-index: 10;
    top: 0rpx;
    left: 0;
    width: 750rpx;
    height: 98rpx;
    background: rgba(255, 255, 255, 1);
}

.remindlist_tap2 {
    display: flex;
    justify-content: space-around;
    height: 98rpx;
    padding-bottom: 3rpx;
    align-items: center;
    font-size: 32rpx;
    font-family: PingFang-SC-Medium;
    font-weight: 500;
    color: rgba(47, 58, 64, 1);
}

.remindlist_bottom {
    position: fixed;
    bottom: 0rpx;
    z-index: 10;
    width: 750rpx;
    height: 98rpx;
    background: rgba(255, 255, 255, 1);
}

.remindlist_bottom2 {
    height: 98rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 32rpx;
    font-family: PingFang-SC-Medium;
    font-weight: 500;
    color: rgba(255, 51, 102, 1);
    line-height: 18rpx;


}

.bottom_img {
    position: relative;
    left: 0;
    top: 5rpx;
}

.remindlist_bottom_img {
    width: 314rpx;
    height: 179rpx;
}

.remindlist_bottom_txt {
    font-size: 26rpx;
    font-family: PingFang-SC-Medium;
    font-weight: 500;
    color: rgba(212, 212, 212, 1);
    line-height: 48rpx;
    margin-top: 28rpx;
}

.remindlist_bottom_B {
    width: 750rpx;
    height: 90vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    overflow: hidden;
}