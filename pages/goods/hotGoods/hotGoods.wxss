  padding-left: 14rpx;
}

.goodsItem_price {
  width: 136rpx;
  height: 26rpx;
  overflow: hidden;
  font-size: 26rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(255, 51, 102, 1);
  line-height: 26rpx;
}

.wrap_bottom {
  width: 750rpx;
