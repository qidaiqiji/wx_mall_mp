page {
  background: #fee0c1;
}

.wrap_top {
  display: flex;
  justify-content: center;
  padding-top: 68rpx;
  align-items: flex-end;
}

.background_image {
  background-size: 750rpx 432rpx;
  background-repeat: no-repeat;
}

.wrap_top>view:nth-child(1) {
  order: 2;
  height: 428rpx;
}

.wrap_top>view:nth-child(2) {
  order: 1;
  height: 402rpx;
}

.wrap_top>view:nth-child(3) {
  order: 3;
  height: 402rpx;
}
.wrap_top_flex{
  display: flex;
}
.getGoodsItemBorder1 {
  height: 428rpx;
  box-shadow: 0rpx -9rpx 38rpx 0rpx rgba(188, 185, 185, 0.5);
}

.getGoodsItemBorder2 {
  height: 402rpx;
}

.getGoodsItemBorder3 {
  height: 402rpx;
}

.goodsItem {
  width: 242rpx;
  position: relative;
  left: 0rpx;
  top: 0rpx;
}

.goodsItem_tag {
  width: 70rpx;
  height: 70rpx;
  position: absolute;
  top: -42rpx;
  left: 50%;
  transform: translate(-50%);
  z-index: 2;
}

.getGoodsItemBorder {
  width: 242rpx;
  position: relative;
  background: rgba(255, 255, 255, 1);
  border-radius: 10rpx 10rpx 0rpx 0rpx;
  display: flex;
  align-items: flex-end;
}
.getGoodsItemBorder >view{
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}
.goodsItem_img {
  width: 216rpx;
  height: 216rpx;
}

.goodsItem_img_ {
  width: 100%;
  height: 100%;
  vertical-align: top;
}

.goodsItem_title {
  width: 192rpx;
  height: 66rpx;
  line-height: 32rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(47, 58, 64, 1);
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-top: 16rpx;
  margin-bottom: 14rpx;
}

.goodsItem_bottom {
  width: 100%;
  height: 50rpx;
  padding-right: 4rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
