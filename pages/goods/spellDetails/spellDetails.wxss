    height: 98rpx;
}

.product_shop_photo_ {
    width: 750rpx;
    vertical-align: top;
}

.spellWrapTop {
    width: 100%;
    height: 88rpx;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding-left: 24rpx;
    padding-right: 24rpx;
    background: rgb(255, 255, 255);
    margin: 20rpx 0rpx;
}

.spellShopThum {
    width: 240rpx;
    height: 240rpx;
    border-radius: 4rpx;
    overflow: hidden;
}

.search_tag_img {
    width: 30rpx;
    height: 30rpx;
}

.spellingRules {
    display: flex;
    align-items: center;
}

.spellingRules>view:nth-child(1) {
    width: 48rpx;
    font-size: 24rpx;
    font-family: PingFangSC-Regular;
    font-weight: 400;
    color: rgba(136, 150, 150, 1);
    line-height: 32rpx;
}

.spellingRules>view:nth-child(2) {
    font-size: 26rpx;
    font-family: PingFangSC-Regular;
    font-weight: 400;
    color: rgba(47, 58, 64, 1);
    line-height: 26rpx;
    padding-left: 34rpx;
}

.spellDetailsTop {
    width: 750rpx;
    height: 128rpx;
    background: rgba(222, 14, 14, 1);
    position: relative;
    left: 0rpx;
    top: 0rpx;
}

.spellShop {
    position: absolute;
    left: 24rpx;
    top: 50rpx;
    width: 702rpx;
    height: 304rpx;
    background: rgba(255, 255, 255, 1);
    border-radius: 20rpx;
    z-index: 2;
    display: flex;
    justify-content: center;
    align-items: center;
}

.commodityInformation {
    height: 240rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    padding-left: 20rpx;
}

.spellGoosdName {
    width: 374rpx;
    height: 80rpx;
    font-size: 28rpx;
    font-family: PingFangSC-Regular;
    font-weight: 400;
    color: rgba(47, 58, 64, 1);
    line-height: 40rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}

.spellAlreadyWrap {
    display: inline-block;
    padding-top: 10rpx;
}

.spellAlready {
    background: linear-gradient(270deg, rgba(252, 76, 76, 1), rgba(255, 122, 122, 1));
    border-radius: 14rpx;
    align-items: center;
    display: flex;
    padding: 0rpx 16rpx;
}

.spellAlready>view {
    height: 22rpx;
    font-size: 22rpx;
    font-family: PingFangSC-Light;
    font-weight: 300;
    color: rgba(255, 255, 255, 1);
    line-height: 22rpx;
}

.peopleWithPrice,
.spellPrice {
    display: flex;
    align-items: baseline;
}

.peopleNumber {
    height: 22rpx;
    line-height: 22rpx;
    font-size: 22rpx;
    font-family: PingFangSC-Regular;
    font-weight: 400;
    color: rgba(222, 14, 14, 1);
    padding-right: 12rpx;
}

.spellPrice>view:nth-child(1) {
    height: 48rpx;
    font-size: 48rpx;
    font-family: PingFangSC-Medium;
    font-weight: 500;
    color: rgba(222, 14, 14, 1);
    line-height: 48rpx;
}

.spellPrice>view:nth-child(2) {
    height: 24rpx;
    font-size: 24rpx;
    font-family: PingFangSC-Medium;
    font-weight: 500;
    color: rgba(222, 14, 14, 1);
    line-height: 24rpx;
}

.spellPrice>view:nth-child(1)::before {
    content: "ï¿¥";
