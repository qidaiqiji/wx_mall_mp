page {
    background: rgb(243, 243, 243);
}
image {
    vertical-align: top;
}

.loadingIcon {
    width: 100rpx;
    height: 100rpx;
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
}
.spellPromptTxt{
    font-size: 32rpx !important;
}
.product {
    width: 100%;
    overflow: hidden;
}

.product_spacing {
    margin-top: 20rpx;
}

.pro_bottom {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
}

