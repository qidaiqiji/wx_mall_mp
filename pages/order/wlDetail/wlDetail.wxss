page {
  background: #f3f3f3;
}

.accordion {
  width: 100%;
  border-top: 1rpx solid #dce4e6;
}

.accordionItem {
  margin-bottom: 10rpx;
}

.wlItem_title {
  width: 100%;
  height: 108rpx;
  padding: 0 26rpx;
  background: #fff;
  border-bottom: 1rpx solid #e5e5e5;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.wlItem_title view:nth-child(1) {
  font-size: 28rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(47, 58, 64, 1);
  padding-right: 6rpx;
}

.wlItem_title view:nth-child(2) {
  font-size: 28rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(103, 113, 114, 1);
  display: flex;
  align-items: center;
}

.wlItem {
  background: #ccc;
  width: 100%;
  transition: all 0.5s ease-in-out;
  overflow: hidden;
  height: 0;
}

.show {
  height: 100%;
}

.hide {
  height: 0;
}

.wl_msg {
  width: 100%;
  height: 290rpx;
  padding: 20rpx 0rpx 20rpx 20rpx;
  background: #fff;
  border-bottom: 1rpx solid #e5e5e5;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.wl_msg>view {
  width: 100%;
  font-size: 28rpx;
  color: #889696;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.wl_msg > view >view {
  color: #2f3a40;
  padding-left: 22rpx;
}

.contents {
  background: #fff;
  padding: 0 16rpx;
  border-bottom: 1rpx solid #e5e5e5;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.contents_desc {
  width: 100%;
  color: #2f3a40;
  font-size: 28rpx;
  margin-top: 30rpx;
}

.contents_date {
  width: 100%;
  font-size: 24rpx;
  color: #889696;
  margin-bottom: 30rpx;
  margin-top: 16rpx;
}

.wl_desc_title {
  width: 100%;
  height: 82rpx;
  line-height: 82rpx;
  padding: 0 18rpx;
  border-bottom: 1rpx solid #e5e5e5;
  text-indent: 12rpx;
  background: #fff;
  color: #889696;
  font-size: 28rpx;
}

.g_con {
  width: 100%;
  overflow-x: hidden;
  background: #fff;
}

.topExpress {
  width: 710rpx;
  height: 155rpx;
  background: #fff;
  margin: 10rpx auto;
  display: flex;
  border-radius: 10rpx;
}

.topExpress-left {
  width: 100rpx;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.topExpress-right {
  font-size: 26rpx;
  color: #333;
  display: flex;
  justify-content: space-around;
  flex-direction: column;
  align-items: flex-start;
  padding: 20rpx 0;
}

.topExpress-right-middle {
  font-size: 22rpx;
}

.topExpress-right-bottom {
  font-size: 20rpx;
  color: #666;
}

.expressRecord {
  width: 100%rpx;
  padding-top: 30rpx;
  padding-bottom: 100rpx;
  padding-right: 20rpx;
  background: #fff;
}

.expressRecord-getAddress {
  width: 100%;
  font-size: 22rpx;
  color: #999;
  display: flex;
}

.expressRecord-top {
  width: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.getAddress-icon {
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  background: #999;
  font-size: 18rpx;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 28rpx;
}

.getAddress-text {
  margin-left: 20rpx;
}

.noReach-online-top-close {
  width: 1rpx;
  height: 50rpx;
  background: #d7d7d7;
  margin-left: 40rpx;
}

.expressRecord-single-close {
  width: 100%;
  height: 150rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  position: relative;
  margin-bottom: 30rpx;
}

.expressRecord-single-noReach-online-top-close {
  display: flex;
  flex-direction: column;
}

.online-top-closing {
  width: 1rpx;
  height: 80rpx;
  background: #d7d7d7;
  margin-left: 40rpx;
}

.hide {
  background: #fff;
}

.online-top-close {
  width: 1rpx;
  height: 80rpx;
  background: #dce4e6;
  margin-left: 40rpx;
}

.dot-closing {
  width: 18rpx;
  height: 18rpx;
  border-radius: 50%;
  margin-left: 32rpx;
  margin-top: 4rpx;
  margin-bottom: 4rpx;
  background: #f36;
  position: relative;
}

.dot-closing_into {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  opacity: 0.25 !important;
  background: #f36 !important;
  position: absolute;
  left: 45%;
  top: 45%;
  transform: translate(-50%, -50%);
}

.dot-close {
  width: 18rpx;
  height: 18rpx;
  border-radius: 50%;
  margin-left: 32rpx;
  margin-top: 4rpx;
  margin-bottom: 4rpx;
  background: #dce4e6;
}

.online-bottom {
  width: 1rpx;
  height: 80rpx;
  background: #dce4e6;
  margin-left: 40rpx;
}

.online-bottom-start {
  width: 1rpx;
  height: 100rpx;
  margin-left: 40rpx;
}

.expressRecord-text {
  margin-left: 30rpx;
  width: 100%;
  border-bottom: 1rpx solid #dce4e6;
}

.expressRecord-statusing {
  font-size: 28rpx;
  color: #333;
}

.expressRecord-status-addressing {
  font-size: 22rpx;
  color: #333;
}

.expressRecord-status {
  font-size: 28rpx;
  color: #2f3a40;
  line-height: 1.3;
}

.expressRecord-status-address {
  font-size: 24rpx;
  color: #999;
  margin-top: 16rpx;
  margin-bottom: 30rpx;
}

.expressRecord-dating {
  position: absolute;
  height: 100%;
  left: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  color: #333;
}

.expressRecord-date {
  position: absolute;
  height: 100%;
  left: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  color: #999;
}

.expressRecord-date-text {
  font-size: 24rpx;
}

.expressRecord-date-time {
  font-size: 18rpx;
}

.logistics_tracking_img {
  width: 20rpx;
  height: 20rpx;
}

.allGoods_confirmOrder {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.scroll_item_confirmOrder {
  width: 88rpx;
  height: 88rpx;
  position: relative;
  margin-left: 20rpx;
  border-radius: 0 0 6rpx 6rpx;
}

.scroll_item_confirmOrder image {
  width: 84rpx;
  height: 84rpx;
  margin: 0 auto;
}

.tags_confirmOrder {
  width: 84rpx;
  height: 27rpx;
  line-height: 27rpx;
  background: #2f3a40;
  opacity: 0.5;
  border-radius: 0 0 6rpx 6rpx;
  position: absolute;
  bottom: 0rpx;
  text-align: center;
  color: #fff;
}
