/* pages/allOrders/allOrders.wxss */
page{
  background: #f3f3f3;
}
.scroll-view-x {
  background-color: #fff;
  white-space: nowrap;
  position: fixed;
  z-index: 10;
  top: 0;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.scroll-view-x .scroll-view-item {
  display: inline-block;
  width: 180rpx;
  line-height: 33px;
  cursor: pointer;
  text-align: center;
}

.on {
  border-bottom: 4rpx solid #ff3366;
  color: #ff3366;
}
.tab_item:hover{
  background: #fff;
}

.scroll-view_H {
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.scroll_view_all {
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.changes {
  margin-top: 70rpx;
}

.item_orders {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  background: #fff;
}

.orderSn {
  width: 100%;
  height: 84rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  font-size: 24rpx;
  background: #dce4e6;
}

.orderSn_num {
  width: 340rpx;
  color: #2f3a40;
}

.orderSn_date {
  width: 300rpx;
  color: #889696;
  text-align: end;
}

.orderContent {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.subSn {
  width: 100%;
  height: 72rpx;
  line-height: 72rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
   color: #889696;
}

.subSn_num {
  width: 400rpx;
  font-size: 24rpx;
}
.subSn_type {
  width: 240rpx;
  text-align: end;
  font-size: 28rpx;
}

.sub_goods {
  width: 100%;
  height: 170rpx;
  border: 1px solid #e9f3f5;
  display: flex;
  justify-content: center;
  align-items: center;
}

.order_Amount {
  width: 100%;
  height: 88rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.totalAmount {
  color: #2f3a40;
  font-size: 24rpx;
  margin-left: 24rpx;
}

.price {
  font-size: 28rpx;
  color: #f36;
}

.price::before {
  content: 'ï¿¥';
}

.toGoBuy {
  margin-right: 20rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.countDown{
height:24rpx;
font-size:24rpx;
font-family:PingFangSC-Regular;
font-weight:400;
color:rgba(255,51,102,1);
line-height:24rpx;
margin-right: 16rpx;
display: flex;
align-items: center;
}
.toGoBuy_btn{
  height: 58rpx;
  line-height: 58rpx;
  text-align: center;
  border-radius: 8rpx;
  color: #fff;
  font-size: 28rpx;
  margin-left: 10rpx;
}
.pay,.confirm {
  background: #f36;

}
.wuliuDesc{
  border: 1rpx solid #a8b6b8;
  color: #2f3a40;
}

.sub_goods_ {
  width: 100%;
}

.noOrderList {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  font-size: 28rpx;
  color: #889696;
}

.noOrderList_img {
  width: 487rpx;
  height: 380rpx;
  margin-top: 180rpx;
  margin-bottom: 56rpx;
}
.container{
  width: 100%;
  height: 300rpx;
  position: fixed;
  top: 50%;
  left: 50%;
}
.loadingIcon{
  width: 100rpx;
  height: 100rpx;
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
}
