/* //秒杀样式开始 */

.timeLimitModule {
  width: 710rpx;
  background: rgba(236, 5, 5, 1);
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 45rpx auto 0 auto;
}

.header_title {
  padding-top: 42rpx;
  padding-bottom: 32rpx;
  padding-left: 30rpx;
}

.timeLimit_header {
  width: 698rpx;
  height: 188rpx;
  background: rgba(255, 40, 40, 1);
  margin-bottom: 6rpx;
  margin-top: 6rpx;
}

.header_title_left {
  width: 274rpx;
  height: 28rpx;
}

.header_title_right {
  width: 100rpx;
  height: 32rpx;
  margin-left: 18rpx;
}

.header_desc {
  display: flex;
  align-items: flex-end;
  padding-left: 30rpx;
}

.header_desc>view {
  height: 20rpx;
  line-height: 20rpx;
  font-size: 20rpx;
  font-family: MicrosoftYaHei;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  padding-right: 28rpx;
}

.timeLimit_goods_row {
  width: 698rpx;
  height: 260rpx;
  background: rgba(255, 255, 255, 1);
  display: flex;
  justify-content: space-between;
  margin-bottom: 6rpx;
}

.timeLimit_goods_row>view:nth-child(1) {
  width: 260rpx;
  height: 260rpx;
  background: rgba(232, 232, 232, 1);
  position: relative;
  left: 0rpx;
  top: 0rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.goodsRow_left {
  width: 260rpx;
  height: 260rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: rgba(255, 255, 255, 1);
}

.goodsRow_left_img {
  width: 157rpx;
  height: 162rpx;
}

.goodsRow_left_tag {
  width: 120rpx;
  height: 44rpx;
  background: rgba(255, 40, 40, 1);
  border-radius: 0rpx 0rpx 10rpx 0rpx;
  font-size: 26rpx;
  font-family: MicrosoftYaHei;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  line-height: 44rpx;
  text-align: center;
  position: absolute;
  left: 0rpx;
  top: 0rpx;
  z-index: 2;
}

.goodsRow_right_title {
  width: 363rpx;
  font-size: 24rpx;
  font-family: MicrosoftYaHeiLight;
  font-weight: 300;
  color: rgba(51, 51, 51, 1);
  line-height: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  padding-top: 36rpx;
}

.goodsRow_right_desc {
  font-size: 24rpx;
  font-family: MicrosoftYaHei;
  font-weight: 400;
  color: rgba(255, 51, 102, 1);
  padding-top: 27rpx;
  padding-bottom: 40rpx;
}

.goodsRow_right_price {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}

.goodsRow_right_price>view:nth-child(1) {
  display: flex;
  align-items: baseline;
}

.goodsRow_price_max {
  font-size: 40rpx;
  font-family: MicrosoftYaHei-Bold;
  font-weight: bold;
  color: rgba(240, 43, 43, 1);
}

.goodsRow_price_max::before {
  content: "￥";
  font-size: 20rpx;
  font-family: MicrosoftYaHei-Bold;
  font-weight: bold;
  color: rgba(240, 43, 43, 1);
}

.goodsRow_price_min {
  font-size: 20rpx;
  font-family: MicrosoftYaHeiLight;
  font-weight: 300;
  text-decoration: line-through;
  color: rgba(122, 122, 122, 1);
}

.goodsRow_right_seconds {
  width: 42rpx;
  height: 42rpx;
  background: rgba(240, 43, 43, 1);
  font-size: 26rpx;
  font-family: MicrosoftYaHei-Bold;
  font-weight: bold;
  color: rgba(255, 255, 255, 1);
  line-height: 42rpx;
  text-align: center;
  margin-right: 30rpx;
}

.goodsCols {
  width: 710rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding-left: 6rpx;
  padding-right: 6rpx;
}

