/* components/qiangGouGoods/index.wxss */

.qianggou_item {
  width: 100%;
  height: 304rpx;
  padding: 28rpx 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
  border-bottom: 1rpx solid #e5e5e5;
}

.item_left {
  padding: 4rpx 0;
  width: 240rpx;
  height: 240rpx;
  position: relative;
}

.item_left image {
  width: 240rpx;
  height: 240rpx;
}

.left_tag {
  position: absolute;
  left: 0;
  bottom: 0;
  width: 86rpx;
  height: 28rpx;
  line-height: 28rpx;
  background: rgba(0, 0, 0, 1);
  opacity: 0.6;
  border-radius: 4rpx;
  text-align: center;
  font-size: 20rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(243, 243, 243, 1);
}

.item_right {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 240rpx;
  width: 450rpx;
  position: relative;
  left: 0rpx;
  top: 0rpx;
  padding-top: 4rpx;
}

.immediately_grab {
  width: 112rpx;
  height: 45rpx;
}

.item_titleMsg .item_title {
  width: 440rpx;
  line-height: 32rpx;
  font-size: 26rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: #2F3A40;
  text-overflow: ellipsis;
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  margin-top:10rpx;

}

.item_titleMsg .item_explain {
width:440rpx;
height:28rpx;
font-size:28rpx;
font-family:PingFangSC-Medium;
font-weight:500;
color:#FF3366;
line-height:28rpx;
overflow: hidden;
 margin-top:10rpx;
}

.item_dataMsg {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.data_left_top {
  display: flex;
  align-items: flex-end;
  font-size: 22rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(255, 68, 102, 1);
}

.data_price {
  display: flex;
  align-items: center;
  justify-content: center;
}

.price_int {
  height: 36rpx;
  line-height: 36rpx;
  font-size: 48rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: #de0e0e;
}

.price_int::before {
  content: 'ï¿¥';
  font-size: 24rpx;
  font-family: PingFangSC-Medium;
  font-weight: bold;
  color: #de0e0e;
}

.decimals {
  font-size: 24rpx;
  padding-top: 18rpx;
  color: #de0e0e;
}

.discount {
  display: flex;
  align-items: center;
  margin-left: 14rpx;
  height: 28rpx;
  line-height: 28rpx;
  margin-bottom: 4rpx;
  border-radius: 0px 4px 4px 0px;
}

.discount>image {
  width: 15rpx;
  height: 28rpx;
}

.discount>view {
  color: rgba(255, 68, 102, 1);
  border-radius: 0rpx 4rpx 4rpx 0rpx;
  padding-right: 4rpx;
  font-size: 22rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  background: rgba(255, 226, 233, 1);
}

.data_left_bottom {
  font-size: 22rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  text-decoration: line-through;
  color: rgba(178, 178, 178, 1);
  margin-left: 6rpx;
}

.item_data_right {
  font-size: 22rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  display: flex;
  flex-direction: column;
  align-items: center;
  height:78rpx;
  position: relative;
}
.item_data_right::after{
  content: '';
  clear: both;
  height: 0;
  display: block;
}
.item_data_right view:nth-child(1) {
  width: 112rpx;
  height: 45rpx;
  line-height: 45rpx;
  background: rgba(222, 14, 14, 1);
  border-radius: 4rpx;
  color: rgba(255, 255, 255, 1);
  text-align: center;
  position: absolute;
  bottom: 30rpx;
  right: 0rpx;
  z-index: 2;
}

.item_data_right view:nth-child(2) {
  color: rgba(178, 178, 178, 1);
  margin-top: 6rpx;
  width:264rpx;
height:22rpx;
line-height: 22rpx;
text-align: end;
font-size:22rpx;
position: absolute;
bottom: 0;
right: 0;
}
