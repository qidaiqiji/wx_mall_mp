  padding-top: 20rpx;
}

.youfeimsg {
  width: 702rpx;
  margin: 0 auto;
  font-size: 28rpx;
  color: #889696;
}

.youfeimsg_title {
  font-size: 30rpx;
  color: #000;
}

.brand_msg {
  width: 100%;
  padding: 0 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
}

.brand_msg view {
  margin-bottom: 44rpx;
}

.brand_msg view text {
  font-size: 26rpx;
  color: #2f3a40;
}

.brand_msg view .brand_msg_title {
  width: 100rpx;
  font-size: 24rpx;
  color: #889696;
  margin-right: 120rpx;
}

.brand_desc {
  width: 100%;
  padding: 50rpx 24rpx 0rpx;
  line-height: 1.7;
  font-size: 26rpx;
  color: #889696;
  text-indent: 24rpx;
}

.brandDetail_msg {
  width: 100%;
  height: 40rpx;
  padding: 0 24rpx;
  display: flex;
  justify-content: flex-end;
}

.brandDetail_msg text {
  width: 120rpx;
  height: 40rpx;
  text-align: end;
  color: #f36;
}

.taocan_msg {
  width: 100%;
  margin-bottom: 50rpx;
}

.taocan_msg_title {
  height: 96rpx;
  display: inline-flex;
  justify-content: flex-start;
  align-items: center;
}

.taocan_msg_tag {
  padding: 0rpx 8rpx;
  background: #1795ff;
  margin: 0 18rpx 0 24rpx;
  font-size: 24rpx;
