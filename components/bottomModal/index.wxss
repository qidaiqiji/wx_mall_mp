/* components/bottomModal/index.wxss */

view {
  display: block;
}

.Mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  z-index: 990;
}

.bottomModal {
  width: 100%;
}

.car_lingquan_num {
  height: 740rpx;
}

.bottomModal_content {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 0rpx;
  background: rgba(255, 255, 255, 1);
  z-index: 999;
}

.bottomModal_content_two {
  height: 1000rpx;
  transition: all 0.2s ease-out;
}

.bottomModal_title {
  width: 100%;
  height: 108rpx;
  font-size: 32rpx;
  color: #2f3a40;
  text-align: center;
  font-weight: bold;
  line-height: 108rpx;
}

.bottomModal_quan {
  width: 100%;
  flex: 1;
  overflow: auto;
  box-sizing: border-box;
}

.quan_item {
  width: 702rpx;
  height: 174rpx;
  margin: 0 auto;
  background: rgba(255, 255, 255, 1);
  border: 1px solid rgba(220, 228, 230, 1);
  border-radius: 0px 8rpx 8rpx 0px;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.quan_item_left {
  width: 222rpx;
  height: 174rpx;
  position: relative;
  color: rgba(255, 255, 255, 1);
  overflow: hidden;
}

.quan_item_left_img {
  width: 222rpx;
  height: 174rpx;
}

.quan_item_left_price {
  width: 156rpx;
  position: absolute;
  top: 30rpx;
  left: 50%;
  transform: translateX(-50%);
  text-align: center;
  font-size: 56rpx;
  text-indent: 22rpx;
}

.quan_item_left_price::before {
  content: '￥';
  font-size: 28rpx;
  position: absolute;
  top: 30rpx;
  left: -16rpx;
}

.quan_item_left_info {
  width: 222rpx;
  position: absolute;
  top: 100rpx;
  left: 50%;
  transform: translateX(-50%);
  text-align: center;
  font-size: 22rpx;
  box-sizing: border-box;
}

.quan_item_right {
  width: 480rpx;
  height: 174rpx;
  font-size: 22rpx;
  color: #889696;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
}

.quan_top {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin-top: 24rpx;
}

.quan_tag {
  width: 84rpx;
  height: 32rpx;
  line-height: 32rpx;
  background: rgba(254, 152, 6, 1);
  border-radius: 8rpx;
  margin-left: 18rpx;
  margin-right: 10rpx;
  text-align: center;
  color: #fff;
}

.quan_title {
  font-size: 24rpx;
  color: #2f3a40;
}

.quan_narrate {
  width: 340rpx;
  margin-left: 114rpx;
  margin-top: 6rpx;
  overflow: hidden;
}

.quan_bottom {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  width: 100%;
  height: 54rpx;
  margin-top: 16rpx;
}

.quan_Data_ {
  width: 280rpx;
  margin-left: 16rpx;
  margin-right: 30rpx;
}

.quan_Data_click {
  width: 130rpx;
  height: 44rpx;
  line-height: 44rpx;
  text-align: center;
  color: #fe9806;
  background: rgba(255, 255, 255, 1);
  border: 1px solid rgba(254, 152, 6, 1);
  border-radius: 22rpx;
  margin-bottom: 30rpx;
}

.bottomModal_tip {
  width: 100%;
  height: 54rpx;
  line-height: 54rpx;
  font-size: 22rpx;
  text-indent: 32rpx;
  box-sizing: border-box;
  border: 1px solid #dce4e6;
  font-weight: 500;
  color: rgba(136, 150, 150, 1);
}

.bottomModal_tip_wrap {
  width: 100%;
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
  z-index: 10;
}

.bottomModal_click {
  width: 100%;
  line-height: 98rpx;
  background: #f36;
  font-size: 32rpx;
  color: #fff;
  text-align: center;
}

.billOfGoods_titles {
  width: 100%;
  height: 120rpx;
  line-height: 120rpx;
  text-align: center;
  position: relative;
}

.billOfGoods_titles_ {
  font-size: 32rpx;
  font-weight: bold;
  color: #000;
}

.billOfGoods_titles_goods {
  position: absolute;
  right: 30rpx;
  top: 0rpx;
  font-size: 24rpx;
}

.billOfGoods_container {
  width: 100%;
  height: 785rpx;
  flex: 1;
  padding-top: 20rpx;
  overflow-y: auto;
}

.billOfGoods_container_zhifa {
  width: 100%;
  height: 785rpx;
  flex: 1;
  padding-top: 20rpx;
}

.billOfGoods_main {
