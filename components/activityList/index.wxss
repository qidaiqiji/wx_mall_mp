/* components/activityList/index.wxss */
.giantPackageGift {
    width: 726rpx;
    /* background: red; */
    /* margin-top: 36rpx; */
    margin-left: 12rpx;
    overflow: hidden;
    border-radius: 8rpx;
}

.aggregationTop {
    width: 100%;
    height: 100rpx;
    display: flex;
    align-items: center;
    position: relative;
    left: 0rpx;
    top: 0rpx;
    z-index: 3;
    background-size: 100% 100%;
    background-repeat: no-repeat;
}

.listTopConter {
    display: flex;
    align-items: baseline;
}

.aggregationTitle {
    height: 36rpx;
    font-size: 36rpx;
    font-family: PingFang-SC-Heavy;
    font-weight: 800;
    color: rgba(255, 255, 255, 1);
    line-height: 36rpx;
    padding-left: 32rpx;
}

.aggregationBuySome {
    height: 24rpx;
    font-size: 24rpx;
    font-family: PingFang-SC-Medium;
    font-weight: 500;
    color: rgba(255, 255, 255, 1);
    line-height: 24rpx;
    padding-left: 14rpx;
    padding-right: 52rpx;
}

.listWrap {
    width: 726rpx;
    overflow: hidden;
    /* padding-top: 24rpx; */
    display: flex;
    flex-wrap: wrap;
    padding-bottom: 16rpx;
}

.listShopWrap {
    width: 230rpx;
    height: 410rpx;
    background: #FFFFFF;
    border-radius: 8rpx;
    margin-left: 10rpx;
    margin-bottom: 8rpx;
    position: relative;
}

.listThum {
    width: 230rpx;
    height: 230rpx;
    position: relative;
    left: 0rpx;
    top: 0rpx;
    background-size: 100%;
}

.listThum>view {
    width: 128rpx;
    height: 32rpx;
    background: rgba(255, 51, 102, 0.9);
    border-radius: 0rpx 8rpx 0rpx 0rpx;
    font-size: 22rpx;
    font-family: MicrosoftYaHei;
    font-weight: 400;
    color: rgba(255, 255, 255, 1);
    line-height: 32rpx;
    text-align: center;
    position: absolute;
    left: 0rpx;
    bottom: 0rpx;
}

.listName {
    width: 185rpx;
    height: 24rpx;
    font-size: 24rpx;
    font-family: MicrosoftYaHei;
    font-weight: 400;
    color: rgba(51, 51, 51, 1);
    line-height: 24rpx;
    margin-left: 20rpx;
    margin-top: 20rpx;
}

.listPriceDesc {
    width: 100%;
    height: 24rpx;
    font-size: 24rpx;
    font-family: MicrosoftYaHei;
    font-weight: 400;
    color: rgba(255, 71, 117, 1);
    line-height: 24rpx;
    padding-left: 20rpx;
    margin-top: 14rpx;
}

.listName,
.listPriceDesc {
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
}

.listPriceWrap {
    display: flex;
    align-items: baseline;
    width: 100%;
    padding-left: 20rpx;
    padding-top: 50rpx;
}

.alistPriceWrap {
    display: flex;
    align-items: baseline;
    padding-right: 6rpx;
}

.listPrice {
    height: 24rpx;
    font-size: 24rpx;
    font-family: MicrosoftYaHei-Bold;
    font-weight: bold;
    color: rgba(255, 4, 46, 1);
    line-height: 24rpx;
}
.listPrice::before {
    content: "ï¿¥";
    font-size: 18rpx;
    font-family: MicrosoftYaHei-Bold;
    font-weight: bold;
}
.listPriceFloor{
    height: 18rpx;
    font-size: 18rpx;
    font-family: MicrosoftYaHei-Bold;
    font-weight: bold;
    color: rgba(255, 4, 46, 1);
    line-height: 18rpx;
}
.listSec {
    height: 18rpx;
    font-size: 18rpx;
    font-family: MicrosoftYaHei;
    font-weight: 400;
    text-decoration: line-through;
    color: rgba(168, 182, 184, 1);
    line-height: 18rpx;
}

.titleBox {
    width: 726rpx;
    height: 100rpx;
    display: flex;
    justify-content: space-around;
    flex-direction: column;
    align-items: center;
}
.titleBox>view{
    text-align: center;
}

.mainTitle {
    height: 34rpx;
    font-size: 36rpx;
    font-family: PingFang-SC-Heavy;
    font-weight: 800;
    color: rgba(255, 255, 255, 1);
    line-height: 36rpx;
}

.subTitle {
    width: 100%;
    margin-top: 10rpx;
    font-size: 16rpx;
    font-family:PingFang-SC-Bold;
    font-weight:bold;
    color:rgba(255,255,255,1);
}
.sell_out{
    width: 230rpx;
    height: 230rpx;
    position: absolute;
    z-index: 999;
    left: 0;
    top: 0;
    display: flex;
    justify-content: center;
    align-items: center;
}
.sell_out>image{
    width: 140rpx;
    height: 140rpx;
    border-radius: 50%;
}