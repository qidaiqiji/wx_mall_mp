.search_goodsList {
  background: #fff;
}

.container {
  width: 100%;
  height: 300rpx;
  position: fixed;
  top: 50%;
  left: 50%;
}

.loadingIcon {
  width: 100rpx;
  height: 100rpx;
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.goodsList {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  font-family: PingFang-SC-regular;
  font-weight: 400;
  flex: 1;
}

.goodsList_condition {
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 98rpx;
  text-align: center;
  border-bottom: 1rpx solid #e5e5e5;
}

.test {
  flex: 1;
  height: calc(100%-74rpx);
}

.goodsList_allGoods {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}

.one {
  display: flex;
  justify-content: center;
  align-items: center;
  font-family: PingFangSC-Regular;
  font-weight: 400;
}

.one_img {
  width: 18rpx;
  height: 22rpx;
  margin-left: 15rpx;
}

.one text {
  margin-right: 6rpx;
}

.nav_active {
  color: #f36;
}

.bottom_fixed {
  position: fixed;
  left: 0rpx;
  bottom: 0rpx;
  width: 100%;
  height: 98rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
}

.fixed_left {
  margin-left: 19rpx;
  flex: 1;
  color: #889696;
  font-size: 24rpx;
  position: relative;
}

.left_price {
  color: #f36;
  font-size: 30rpx;
  font-weight: bold;
  text-indent: 0rpx;
}

.left_price::before {
  left: 0rpx;
  content: 'ï¿¥';
  font-size: 24rpx;
  color: #f36;
  font-weight: normal;
}

.fixed_right {
  width: 240rpx;
  height: 98rpx;
  line-height: 98rpx;
  text-align: center;
  background: #f36;
  color: #fff;
  font-weight: bold;
  font-size: 32rpx;
}

.goodsItem, .noGoodsItem {
  width: 100%;
}

.noGoodsItem_img {
  width: 314rpx;
  height: 180rpx;
  margin: 0 auto;
  margin-top: 200rpx;
  margin-left: 50%;
  transform: translateX(-50%);
}

.noGoodsItem_txt {
  width: 232px;
  font-size: 26rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(212, 212, 212, 1);
  margin: 0 auto;
  text-align: center;
}
.isLoadings{
  margin-bottom: 98rpx;
}
