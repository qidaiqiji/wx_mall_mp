/* components/product_b/swiper/index.wxss */

.pro_swipe {
    width: 100%;
    height: 650rpx;
    background: rgba(255, 255, 255, 1);
    position: relative;
    left: 0;
    top: 0;
   
  }
  
  /* 轮播图 */
  
  .pro_swiper {
    width: 750rpx;
    height: 600rpx;
    text-align: center;
    margin-top: 24rpx;
  }
  
  /* 轮播图片 */
  
  .swiper_sw {
    width: 600rpx;
    height: 600rpx;
    vertical-align: top;
    
  }
  
  .pro_swipe_top {
    width: 438rpx;
    height: 48rpx;
    border-radius: 24rpx;
    position: absolute;
    left: 27rpx;
    top: 112rpx;
    z-index: 10;
    overflow: hidden;
    opacity: 1;
    transform: translateY(0rpx);
    transition: all 0.6s linear;
  }
  
  .pro_swipe_top_two {
    opacity: 0;
    transform: translateY(-50rpx);
    transition: all 0.6s linear;
  }
  
  .pro_swipe_img_wrap {
    width: 438rpx;
    height: 48rpx;
    background: rgba(172, 176, 179, 1);
    border-radius: 24rpx;
    transition: all 0.4s linear;
  }
  
  .isShow {
    transform: translateY(-80rpx);
    opacity: 0;
    transition: all 0.4s linear;
  }
  
  .pro_swipe_top_wrap {
    width: 438rpx;
    height: 48rpx;
    border-radius: 24rpx;
  }
  
  .imageCount {
    position: absolute;
    right: 25rpx;
    bottom: 31rpx;
    width: 56rpx;
    height: 30rpx;
    background: rgba(172, 176, 179, 1);
    border-radius: 13rpx;
    font-size: 22rpx;
    font-family: PingFang-SC-Regular;
    font-weight: 400;
    color: rgba(255, 255, 255, 1);
    line-height: 30rpx;
    text-align: center;
  }
  
  .pro_swipe_top_txt {
    height: 22rpx;
    font-size: 22rpx;
    font-family: PingFang-SC-Regular;
    font-weight: 400;
    color: rgba(255, 255, 255, 1);
    line-height: 36rpx;
    position: absolute;
    left: 54rpx;
    top: 6.5rpx;
  }

  .images_wrap {
    margin-top: 24rpx;
    width: 750rpx;
    height: 600rpx;
    display: flex;
    align-items: center;
    justify-content: center;

  }
  
  .swiper_video {
    width: 750rpx;
    height: 422rpx;
    position: relative;
    left: 0rpx;
    top: 114rpx;
  }
  .videoWrap{
    width: 750rpx;
    height: 650rpx;
    background:rgba(0, 0, 0, 1);
  }
  .video_img {
    width: 120rpx;
    height: 120rpx;
    position: absolute;
    left: 50%;
    top: 50%;
    z-index: 11;
    transform: translate(-50%, -50%);
  }
  
  .shop_swiper_bottom {
    position: relative;
    left: 0rpx;
    bottom: 0rpx;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .shop_swiper {
    width: 12rpx;
    height: 12rpx;
    border-radius: 50%;
    margin: 0rpx 8rpx;
  }
  
  .shop_swiper_img_ {
    width: 20rpx;
    height: 20rpx;
    border-radius: 50%;
    margin: 0rpx 8rpx;
  }
  
  .shop_swiper_gray {
    background: #f36;
  }
  
  .shop_swiper_white {
    background: #bfbfbf;
  }
  
  .is_no_video {
    width: 58rpx;
    height: 58rpx;
    position: absolute;
    top: 118rpx;
    right: 20rpx;
    z-index: 11;
  }
  