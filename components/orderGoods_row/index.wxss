.allGoods {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.scroll_item {
  width: 130rpx;
  height: 130rpx;
  box-sizing: border-box;
  border: 1rpx solid #e9f3f5;
  position: relative;
  margin: 0 10rpx;
  border-radius: 0 0 6rpx 6rpx;
}

.scroll_item image {
  width: 126rpx;
  height: 110rpx;
  margin: 0 auto;
}

.tags {
  width: 126rpx;
  height: 27rpx;
  line-height: 27rpx;
  background: rgba(255, 51, 102, 0.8);
  position: absolute;
  top: 100rpx;
  text-align: center;
  color: #fff;
  font-size: 20rpx;
}

.allGoods_confirmOrder {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.scroll_item_confirmOrder {
  width: 120rpx;
  height: 120rpx;
  position: relative;
  margin: 0rpx 10rpx;
  border-radius: 0 0 6rpx 6rpx;
}

.scroll_item_confirmOrder image {
  width: 120rpx;
  height: 120rpx;
  margin: 0 auto;
}

.tags_confirmOrder {
  width: 120rpx;
  height: 27rpx;
  line-height: 27rpx;
  background: #2f3a40;
  opacity: 0.7;
  border-radius: 0 0 6rpx 6rpx;
  position: absolute;
  bottom: 0rpx;
  text-align: center;
  color: #fff;
}

.groupBuying {
  width: 750rpx;
  padding: 0 24rpx;
  height: 130rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.goods_main {

  display: flex;
}

.goodsThumb {
  width: 130rpx;
  height: 130rpx;
  border: 1rpx solid rgba(229, 229, 229, 1);
  border-radius: 4rpx;
  overflow: hidden;
}

.goodsThumb>image {
  width: 130rpx;
  height: 130rpx;
}

.goodsMsg {
  margin-left: 20rpx;
  height: 130rpx;
}

.msg_title {
  width: 360rpx;
  height: 62rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(47, 58, 64, 1);
  line-height: 30rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.msg_tags {
  margin-top: 28rpx;
  display: flex;
  align-items: center;
}

.tag {
  width: 46rpx;
  height: 28rpx;
  background: rgba(222, 14, 14, 1);
  border-radius: 4rpx;
  font-size: 20rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  line-height: 28rpx;
  text-align: center;
}

.goodsDesc {
  height: 130rpx;
  padding-top: 10rpx;

}

.desc_price {
  height: 24rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(47, 58, 64, 1);
  text-align: end;
  line-height: 24rpx;
}

.desc_num {
  height: 18rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(136, 150, 150, 1);
  line-height: 18rpx;
  margin-top: 14rpx;
  text-align: end;
}