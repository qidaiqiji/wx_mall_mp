/* components/shopTagUp/index.wxss */
@import "/utils/wxParse/wxParse.wxss";

/* 阴影 */

.Mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  z-index: 12;
}

/* 弹窗顶部边框 */

.shopTagUp_title {
  width: 100%;
  height: 120rpx;
  background: rgba(255, 255, 255, 1);
  font-size: 32rpx;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: rgba(47, 58, 64, 1);
  line-height: 120rpx;
  text-align: center;
}

.shopTagUp_conter {
  width: 100%;
  height: 742rpx;
}

/* 确定 */

.shopTagUp_bottom {
  width: 750rpx;
  height: 98rpx;
  background: rgba(255, 51, 102, 1);
  font-size: 32rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  line-height: 98rpx;
  text-align: center;
  position: absolute;
  left: 0rpx;
  bottom: 0rpx;
}

.shopTagUp_wuliao_ {
  line-height: 32rpx;
  border-radius: 4rpx;
  margin-right: 17rpx;
  font-size: 22rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  padding: 2rpx 6rpx;
}

.shopTagUp_content {
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 13;
  width: 100%;
  height: 1000rpx;
  background: rgba(255, 255, 255, 1);
}

.shopTagUpContent {
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 13;
  width: 100%;
  height: 0rpx;
  background: rgba(255, 255, 255, 1);
}

.shopTagUpContent_ {
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 13;
  width: 100%;
  height: 1000rpx;
  background: rgba(255, 255, 255, 1);
  transition: all 0.6s;
}

.rich_ext {
  width: 100%;
  font-size: 24rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(136, 150, 150, 1);
  line-height: 42rpx;
  padding: 0rpx 45rpx;
}

.shopTagUpScroll {
  padding: 0rpx 24rpx;
}

.shopTagUp_tip {
  width: 100%;
  height: 54rpx;
  line-height: 54rpx;
  color: #889696;
  font-size: 24rpx;
  text-align: center;
}

.tagUpActivityTitle {
  width: 100%;
  height: 120rpx;
  background: rgba(255, 255, 255, 1);
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 32rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: rgba(47, 58, 64, 1);
  padding: 0rpx 34rpx 0rpx 24rpx;
}

.shopTagUpList image {
  width: 98rpx;
  height: 98rpx;
  border-radius: 4rpx;
  border: 1rpx solid #e5e5e5;
}

.shopTagUpList>view {
  display: flex;
  align-items: center;
}

.shopTagUpList {
  width: 100%;
  height: 130rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 16rpx;
}

.shopTagUpTag {
  width: 750rpx;
  overflow: hidden;
  padding-bottom: 20rpx;
}

.shopTagUpTagDesc {
  width: 438rpx;
  height: 72rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(136, 150, 150, 1);
  line-height: 36rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  padding-left: 10rpx;
}

.shopTagUpTagPrice {
  height: 24rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(47, 58, 64, 1);
  line-height: 24rpx;
}

.shopTagUpTagImg {
  height: 50rpx;
  display: flex;
  align-items: center;
  padding: 0rpx 24rpx;
}

.shopTagUpTagImg>view:nth-child(1) {
  height: 28rpx;
  padding: 4rpx;
  font-size: 20rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(255, 51, 102, 1);
  line-height: 20rpx;
  border: 1rpx solid rgba(255, 51, 102, 1);
  border-radius: 4rpx;
}

.shopTagUpTagImg>view:nth-child(2) {
  height: 28rpx;
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(47, 58, 64, 1);
  line-height: 28rpx;
  padding-left: 14rpx;
}

.tagUpTagFullReduction {
  display: flex;
  margin-bottom: 28rpx;
  padding-left: 24rpx;
  margin-top: 16rpx;
}

.tagUpTagFullReduction_ {
  padding: 4rpx 6rpx;
  font-size: 20rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(255, 51, 102, 1);
  line-height: 20rpx;
  border: 1rpx solid rgba(255, 51, 102, 1);
  border-radius: 4rpx;
  position: relative;
  left: 0rpx;
  top: 8rpx;
}

.tagUpTagFullReduction>view:nth-child(2) {
  width: 512rpx;
  font-size: 26rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(47, 58, 64, 1);
  line-height: 38rpx;
  padding-left: 14rpx;
}

.shopTagUpTagSolid {
  width: 100%;
  height: 1rpx;
  background: #e5e5e5;
  margin-left: 24rpx;
  margin-top: 12rpx;
}

.shopTagUpHide {
  height: 42rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.shopTagUpHide>image {
  height: 100%;
  width: 42rpx;
}