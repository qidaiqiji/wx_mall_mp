.search_top {
  box-sizing: border-box;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  background: rgba(255, 255, 255, 0.5);
  margin: 0 auto;
  width: 702rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 30rpx;
}
.searchTopScroll{
  height: 60rpx;
}
.searchTopScroll >view{
  height: 60rpx;
}
.top_img {
  width: 37rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 21rpx;
  margin-right: 18rpx;
  display: flex;
  align-items: center;
}

.top_img_ {
  width: 34rpx;
  height: 28rpx;
}

.top_title {
  color: rgba(136, 150, 150, 0.8);
  font-size: 26rpx;
  display: flex;
  align-items: center;
}
