/* components/goodsItemThree_col/index.wxss */

image {
  vertical-align: top;
}

.c_main_img {
  width: 345rpx;
  height: 350rpx;
  border-radius: 8rpx 8rpx 0rpx 0rpx;
}

.c_main_icon_img {
  width: 68rpx;
  height: 68rpx;
  border-radius: 50%;
  position: absolute;
  left: 20rpx;
  top: 20rpx;
  z-index: 3;
}

.c_conter_car_img {
  width: 30rpx;
  height: 30rpx;
}

.c_conter_shop {
  width: 347rpx;
  background: #fff;
  border-radius: 8rpx;
  overflow: hidden;
  margin-top: 20rpx;
}

.c_conter_wrap {
  position: relative;
  left: 0rpx;
  top: 0rpx;
}

.c_txt_wrap {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.c_title, .c_save_money, .c_produce {
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  text-align: center;
}

.c_title {
  width: 304rpx;
  height: 24rpx;
  line-height: 24rpx;
  font-size: 24rpx;
  font-family: MicrosoftYaHei;
  font-weight: 400;
  color: rgba(51, 51, 51, 1);
  margin-top: 10rpx;
  line-height: 24rpx;
  height: 24rpx;
}

.c_save_money {
  width: 292rpx;
  font-size: 24rpx;
  font-family: MicrosoftYaHei;
  font-weight: 400;
  color: rgba(167, 26, 29, 1);
  margin-top: 10rpx;
  line-height: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
}

.c_produce_wrap {
  margin-top: 30rpx;
  display: flex;
  justify-content: center;
  align-items: baseline;
  height: 26rpx;
}

.c_produce {
    height: 26rpx;
  font-size: 32rpx;
  font-family: PingFang-SC-Regular;
  font-weight: 400;
  color: #a71a1d;
  line-height: 26rpx;
}

.c_produce_symbol {
  height: 26rpx;
  font-size: 22rpx;
  font-family: PingFang-SC-Regular;
  font-weight: 400;
  color: #a71a1d;
}

.c_bottom {
  width: 100%;
  display: flex;
  justify-content: center;
  margin-bottom: 28rpx;
  margin-top: 20rpx;
}

.c_bottom>view {
  height: 50rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.c_bottom>view:nth-child(2) {
  width: 107rpx;
  background: rgba(253, 221, 193, 1);
  border-radius: 0rpx 4rpx 4rpx 0rpx;
}

.c_buyNow {
  width: 195rpx;
  background: rgba(167, 26, 29, 1);
  border-radius: 4rpx 0rpx 0rpx 4rpx;
  font-size: 22rpx;
  font-family: NotoSansHans-Light;
  font-weight: 300;
  color: rgba(255, 255, 255, 1);
}
