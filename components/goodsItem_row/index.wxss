  margin-left: 20rpx;
  height: 240rpx;
}

.container .right .right_top {
  width: 418rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  overflow: hidden;
}

.container .right .right_title {
  width: 392rpx;
