  line-height: 28rpx;
  font-size: 28rpx;
  color: #2f3a40;
  margin-top: 7rpx;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-family: PingFangSC-Regular;
  font-weight: 400;
}

.container .right .right_msg {
