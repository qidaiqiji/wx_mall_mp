.container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 292rpx;
  overflow: hidden;
  padding: 0rpx 24rpx;
  position: relative;
  border-bottom: 1rpx solid #e5e5e5;
}

.play_top_img {
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  z-index: 5;
  transform: translate(-50%, -50%);
}

.container .left {
  width: 240rpx;
  height: 240rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  position: relative;
  border-radius: 4rpx;
  overflow: hidden;
}

.goodsItem_col_tag_position {
  width: 54rpx;
  height: 54rpx;
  position: absolute;
  top: 16rpx;
  right: 16rpx;
}

.container .left .left_themeIcon {
  position: absolute;
  top: 0;
  left: 0;
  max-width: 80rpx;
  max-height: 80rpx;
}

.container .left .left_img {
  width: 240rpx;
  height: 240rpx;
}

.container .left .left_tag {
  width: 86rpx;
  height: 27rpx;
  opacity: 0.6;
  border-radius: 4rpx;
  line-height: 27rpx;
  position: absolute;
  left: 0;
  bottom: 0;
  text-align: center;
  font-size: 20rpx;
  color: rgba(243, 243, 243, 1);
  font-family: PingFangSC-Regular;
  font-weight: 400;
}

.left_tag_warehouse {
  background: #FF6C44;
}

.goodslist_row_old_out {
  width: 240rpx;
