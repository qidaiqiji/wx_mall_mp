/* components/guessYouLike/index.wxss */
.goods_col{
  width: 344rpx;
  background: #fff;  
  margin-bottom: 14rpx;
  border-radius: 8rpx;
  display: inline-block;
  /* break-inside: avoid */
}
.goods_col:nth-child(2n) {
  margin-right: 0;
}
.n_img_box{
  width: 344rpx;
  height: 344rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 12rpx;
  position: relative;
}
.sell_out{
  width: 344rpx;
  height: 344rpx;
  position: absolute;
  left: 0;
  top: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}
.sell_out>image{
  width: 140rpx;
  height: 140rpx;
}
.right-icon{
  position: absolute;
  width: 54rpx;
  height: 54rpx;
  right: 16rpx;
  top:16rpx;
}
.right-icon image{
  width: 100%;
  height: 100%;
}
.play_top_img{
  position: absolute;
  width: 60rpx;
  height: 60rpx;
}
.cover{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.n_img_box>image{
  width: 90%;
  height: 90%;
  border-radius: 4rpx;
}
.n_info_box{
  padding-left: 20rpx; 
}
.noLook {
  width: 80%;
  background: #f3f3f3;
  color: #ccc;
  font-size: 28rpx;
  text-align: center;
}
.n_price{
  height: 42rpx;
  line-height: 42rpx;
  color: #FF3366;
  font-size: 32rpx;
  display: inline-block;
}
.n_price_float{
  font-size: 24rpx;
}
.n_price_int::before{
  content: "￥";
  color: #FF3366;
  font-size: 24rpx;
}
.n_sale_num{
  color: #889696;
  font-size: 20rpx;
  font-family:PingFangSC-Light;
  margin-bottom: 8rpx;
  margin-top: 8rpx;
}
.n_desc{
  width: 288rpx;
  font-size: 24rpx;
  color:#2F3A40;
  /* line-height: 36rpx; */
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;

}
.n_tag_box{
  width: 100%;
  height: 38rpx;
  margin-bottom: 12rpx;
  /* display: flex; */
  overflow: hidden;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
.n_tag{
  /* height: 30rpx; */
  font-size: 20rpx;
  border-radius: 4rpx;
  color: #FF3366;
  line-height: 20rpx;
  padding: 0 2rpx;
  margin-right: 8rpx;
  display: inline-block;
  font-family: PingFangSC-Light;
  position: relative;
  padding: 4rpx ;
}
.n_tag:after{
  content: "";
  display: block;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  pointer-events: none;
  border-radius: 2px;
  border: 1px solid #ff3366;
  transform: scale(.5);
  transform-origin: 0 0;
  bottom: -100%;
  right: -100%;
  border-radius:4rpx;
}
/* 专辑样式 */
.collection_goods_col{
  /* height: 512rpx; */
}
.co_img_box{
  width: 344rpx;
  height: 344rpx;
  background: #fff;
  padding: 32rpx 40rpx 48rpx 40rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  border-radius: 8rpx 8rpx 0 0;
}
.co_img_item{
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 24rpx;
}
.co_img_item image{
  width: 100%;
  height: 100%
}
.co_desc_box{
  padding: 20rpx 36rpx 24rpx 20rpx;
}
.brief_desc{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.co_desc {
  width: 100%;
  line-height: 36rpx;
  font-size: 24rpx;
  color: #2F3A40;
  
}
.btn_check{
  width: 112rpx;
  height: 44rpx;
  border-radius: 4rpx;
  color: #fff;
  background: #FF3366;
  line-height: 44rpx;
  text-align: center;
  margin-top: 18rpx;

}
/* 发现样式 */
.discover_goods_col{
  /* height: 524rpx; */
  position: relative;
}
.d_img_box {
  width: 100%;
  height: 344rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 8rpx 8rpx 0 0;
  background: #fff;
}
.fixed_tag{
  position: absolute;
  left: 14rpx;
  top: 330rpx;
  width: 56rpx;
  height: 32rpx;
  background:linear-gradient(-69deg,rgba(255,91,132,1) 0%,rgba(252,168,189,1) 100%);
  border-radius: 4rpx;
  color: #fff;
  line-height: 32rpx;
  text-align: center;
}
.d_img_box image:first-child{
  width: 100%;
  height: 100%;
  border-radius: 8rpx 8rpx 0 0;
}
.d_bottom_desc{
  width: 100%;
  padding: 32rpx 36rpx 16rpx 20rpx;
}
.d_desc{
  color: #2F3A40;
  font-size: 24rpx;
  font-family:PingFangSC-Medium;
  line-height:36rpx;
}
.d_avator_info{
  margin-top: 16rpx;
  display: flex;
  height: 46rpx;
  align-items: center;
}
.avator{
  width: 46rpx;
  height: 46rpx;
  border-radius: 50%;
  margin-right: 14rpx;
  background: yellow
}
.avator image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
.avator_name{
  flex: 1;
  font-size: 24rpx;
  color: #889696;
  height: 24rpx;
  line-height: 24rpx;
  overflow: hidden;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
