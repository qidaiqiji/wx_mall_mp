.content_goods {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-wrap: wrap;
}

.play_top_img {
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  z-index: 5;
  transform: translate(-50%, -50%);
}

.goodsItem_col_left_themeIcon {
  width: 80rpx;
  height: 80rpx;
  position: absolute;
  left: 8rpx;
  top: 16rpx;
  z-index: 5;
}

.list_col_sold_out {
  width: 344rpx;
  height: 34rpx;
  background: #7f7f7f;
  font-size: 22rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  line-height: 34rpx;
  text-align: center;
}

.list_col_sold_out_ {
  width: 86rpx;
  height: 28rpx;
  background: rgba(73, 172, 255, 1);
  border-radius: 4rpx;
  position: absolute;
  left: 0;
  bottom: 0;
  text-align: center;
  font-size: 20rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
  line-height: 28rpx;
}

.col_main {
  position: relative;
  width: 345rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  background: #fff;
  margin-bottom: 14rpx;
  border-radius: 4rpx;
  overflow: hidden;
}

.goodsItem_col_tag_wrap {
  display: flex;
  justify-content: flex-start;
  margin-top: 4rpx;
}

.col_top {
  width: 344rpx;
  height: 344rpx;
  line-height: 344rpx;
  text-align: center;
  position: relative;
  left: 0rpx;
  top: 0rpx;
}

.sell_out {
  position: absolute;
  left: 0rpx;
  bottom: 0rpx;
  z-index: 2;
}

.left_tag {
  width: 86rpx;
  height: 27rpx;
  background: #ff6c44;
  border-radius: 4rpx;
  line-height: 27rpx;
  position: absolute;
  left: 0;
  bottom: 0;
  text-align: center;
  font-size: 20rpx;
  color: rgba(243, 243, 243, 1);
  font-family: PingFangSC-Regular;
  font-weight: 400;
  margin-left: 10rpx;
}

.col_top_img {
  width: 344rpx;
  max-height: 344rpx;
  vertical-align: top;
}

.col_middle_tag {
  width: 320rpx;
  margin-top: 8rpx;
  height: 28rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  overflow: hidden;
}

.col_middle_tag_ {
  width: 320rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  overflow: hidden;
}

.goodsItem_col_tag {
  width: 47rpx;
  height: 28rpx;
  overflow: hidden;
  margin-right: 10rpx;
}

.goodsItem_col_tag_two_ {
  width: 47rpx;
  overflow: hidden;
  margin-top: 16rpx;
  height: 28rpx;
  margin-right: 10rpx;
}

.goodsItem_col_tag_two {
  width: 47rpx;
  height: 100%;
  overflow: hidden;
  margin-right: 10rpx;
}

.goodsItem_col_tag_position {
  width: 54rpx;
  height: 54rpx;
  position: absolute;
  top: 16rpx;
  right: 16rpx;
}

.col_middle_tag text {
  text-align: center;
}

.discount {
  height: 28rpx;
  line-height: 28rpx;
  color: #ff9600;
  font-size: 20rpx;
  text-align: center;
  border: 1px solid #ff9600;
  border-radius: 4rpx;
  margin-right: 8rpx;
  padding: 0rpx 6rpx;
  font-family: PingFangSC-regular;
  font-weight: 300;
}

.col_middle_title {
  width: 320rpx;
  height: 64rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 26rpx;
  color: #2f3a40;
  margin-bottom: 14rpx;
  margin-top: 10rpx;
  line-height: 1.3;
}

.col_bottom {
  width: 320rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 24rpx;
  color: #f36;
}

.addSymbol_wrap {
  display: flex;
  align-items: baseline;
}

.addSymbol {
  height: 32rpx !important;
  line-height: 32rpx !important;
  font-size: 32rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(255, 51, 102, 1);
}

.addSymbol_floor {
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(255, 51, 102, 1);
}

.noLook {
  width: 80%;
  background: #f3f3f3;
  color: #ccc;
  font-size: 28rpx;
  text-align: center;
}

.addSymbol::before {
  content: "￥";
  font-size: 28rpx;
  font-weight: normal;
}

.col_bottom_toBuy {
  width: 70rpx;
  height: 70rpx;
  line-height: 70rpx;
  position: absolute;
  right: 10rpx;
  bottom: 0rpx;
  text-align: center;
}

.col_bottom_toBuy_cartimg {
  width: 27rpx;
  height: 26rpx;
  margin: 0 auto;
  text-align: center;
}

.col_bottom_toBuy_img {
  width: 44rpx;
  height: 44rpx;
}

.col_bottom_toBuy_vip {
  width: 44rpx;
  height: 44rpx;
}

.top_active_tags image {
  width: 20rpx;
  height: 20rpx;
}

.top_active_tags text {
  font-size: 20rpx;
}

.content_goods_vip {
  width: 100%;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.col_main_vip {
  width: 344rpx;
  height: 580rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  background: #fff;
  margin-bottom: 14rpx;
  border-radius: 4rpx;
  box-shadow: 0rpx 9rpx 38rpx 0rpx rgba(188, 185, 185, 0.14);
}

.col_top_vip {
  padding-top: 30rpx;
  width: 300rpx;
  height: 335rpx;
  margin: 0 auto;
}

.col_top_img_vip {
  width: 300rpx;
}

.col_middle_title_vip {
  width: 300rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 28rpx;
  color: #2f3a40;
  margin: 0 auto;
  height: 56rpx;
  line-height: 28rpx;
}

.col_amount_saved_vip {
  width: 100%;
  margin-left: 50rpx;
  color: #889696;
  font-size: 24rpx;
}

.col_bottom_vip {
  width: 300rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 10rpx;
  color: #f36;
  margin: 0 auto;
}

.col_bottom_price_tag {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.col_bottom_price_tag image {
  width: 110rpx;
  height: 36rpx;
}

.addSymbol_vip {
  width: 110rpx;
  font-size: 32rpx;
  color: #271c1e;
}

.addSymbol_vip::before {
  content: "￥";
  font-size: 22rpx;
}
