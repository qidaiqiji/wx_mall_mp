/* components/spellGroupList/index.wxss */
.cSpellWrapBorder {
    width: 100%;
    padding-left: 24rpx;
    background: rgba(255, 255, 255, 1) !important;
}
.cSpellWrapBorder_{
    width: 750rpx;
    padding-left: 24rpx;
    background: rgba(255, 255, 255, 1) !important;
}
.cSpellWrapBorder>view:nth-child(n+2) {
    border-top: 1rpx solid #E5E5E5;
}

.cSpellWrap {
    width: 100%;
    height: 98rpx;
    background: rgba(255, 255, 255, 1);
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.cSpellLeft {
    display: flex;
    align-items: center;
}

.cSpellLeft>image {
    width: 60rpx;
    height: 60rpx;
    background: rgba(255, 193, 62, 1);
    border-radius: 50%;
}

.cSpellLeft>view {
    height: 24rpx;
    font-size: 24rpx;
    font-family: PingFangSC-Regular;
    font-weight: 400;
    color: rgba(47, 58, 64, 1);
    line-height: 24rpx;
    padding-left: 18rpx;
}

.cSpellRight {
    display: flex;
    align-items: center;
}

.cPeopleSplee {
    height: 24rpx;
    font-size: 24rpx;
    font-family: PingFangSC-Regular;
    font-weight: 400;
    color: rgba(47, 58, 64, 1);

}

.cPeopleSplee>text {
    color: #FF3366;
}

.cSpellTime {
    /* width: 134rpx; */
    height: 22rpx;
    font-size: 22rpx;
    font-family: PingFangSC-Regular;
    font-weight: 400;
    color: rgba(136, 150, 150, 1);
    line-height: 22rpx;
    margin-top: 10rpx;
    display: flex;
}
.cGoSpell {
    width: 112rpx;
    height: 44rpx;
    background: rgba(222, 14, 14, 1);
    border-radius: 4rpx;
    font-size: 22rpx;
    font-family: PingFangSC-Regular;
    font-weight: 400;
    color: rgba(255, 255, 255, 1);
    line-height: 44rpx;
    text-align: center;
    margin-left: 16rpx;
    margin-right: 24rpx;
}