.Mask {
  transition: all 0.2s linear;
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  right: 0rpx;
  bottom: 0rpx;
  background: rgba(0, 0, 0, 0.7);
  opacity: 0.5;
  z-index: 2990;
}

.groupCart {
  transition: all 0.2s linear;
  position: fixed;
  bottom: -1rpx;
  left: 0rpx;
  width: 100%;
  background: rgba(255, 255, 255, 1);
  z-index: 2999;
  height: 1000rpx;
}

.groupCartTopConter {
  padding-left: 34rpx;
}

.groupCartThumb {
  width: 240rpx;
