.filter-container {
  width: 628rpx;
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  background: #fff;

}

.container_title {
  width: 100%;
  height: 94rpx;
  line-height: 94rpx;
  text-align: center;
}

.container_main {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  overflow-y: auto;
  margin-bottom: 98rpx;
}


.container_main_title {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  background: #dce4e6;
  font-size: 28rpx;
  color: #2f3a40;
  padding-left: 34rpx;
}

.container_main_content {
  min-height: 280rpx;
  display: flex;
  justify-content: flex-start;
  align-content: flex-start;
  flex-wrap: wrap;
  padding: 30rpx 0rpx 10rpx 30rpx;

}

.main_content_item {
  width: 156rpx;
  height: 64rpx;
  line-height: 64rpx;
  border: 1rpx solid #dce4e6;
  font-size: 24rpx;
  text-align: center;
  color: #889696;
  overflow: hidden;
  margin-right: 42rpx;
  margin-bottom: 30rpx;
  border-radius: 6rpx;
}

.main_content_itemClick {
  border: 1rpx solid #ff3366;
  color: #ff3366;
}

.container_btn {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 98rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 32rpx;
  border: 1rpx solid #dce4e6;
}

.container_btn_cancel {
  flex: 1;
  height: 98rpx;
  line-height: 98rpx;
  text-align: center;
  color: #2f3a40;
}

.container_btn_confirm {
  flex: 1;
  height: 98rpx;
  line-height: 98rpx;
  background: #ff3366;
  color: #fff;
  text-align: center;

}