/* components/saleComponents/index.wxss */
.discounts_goods {
  width: 100%;
  padding: 0 8rpx;
}

.discounts_goodsItem {
  width: 710rpx;
  margin-bottom: 21rpx;
  border-radius:16rpx;
  overflow: hidden;
}

.discounts_top {
  position: relative;
  left: 0rpx;
  top: 0rpx;
  width: 100%;
  height: 318rpx;
  background-repeat: no-repeat;
  background-size: 100% 100%;
}

.discountsIcon {
  position: absolute;
  left: 10rpx;
  top: 0rpx;
  width: 60rpx;
  height: 60rpx;
}


.discounts_txt {
  width: 702rpx;
  height: 48rpx;
  background: linear-gradient(90deg, rgba(255, 51, 102, 1) 0%, rgba(255, 51, 102, 0) 100%);
  position: absolute;
  left: 0rpx;
  bottom: 0rpx;
}

.discounts_txt_name {
  width: 462rpx;
  height: 48rpx;
  font-size: 24rpx;
  font-family: PingFang-SC-Regular;
  font-weight: 400;
  line-height: 48rpx;
  color: rgba(255, 255, 255, 1);
  padding-left: 20rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.discounts_bottom {
  width: 100%;
  height: 88rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0rpx 9rpx 38rpx 0rpx rgba(188, 185, 185, 0.14);
  display: flex;
  align-items: center;
  padding: 0rpx 24rpx;
}

.sellingPointWrap {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: baseline;
}

.discounts_knock {
  width: 480rpx;
  height: 24rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(255, 51, 102, 1);
  line-height: 24rpx;
  overflow: hidden;
  text-overflow: clip;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.discounts_time_wrap {
  height: 25rpx;
  display: flex;
  align-items: baseline;
}

.discounts_time_txt1 {
  font-size: 20rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(47, 58, 64, 1);
}
.componentRestTime{
  display: flex;
  align-items: baseline;
}
.componentRestTime>view:nth-child(1) {
  height: 32rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Medium;
  font-weight: 500;
  color: rgba(255, 51, 102, 1);
  line-height: 32rpx;
}

.componentRestTime>view:nth-child(2) {
  height: 20rpx;
  font-size: 20rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color: rgba(47, 58, 64, 1);
  line-height: 20rpx;
}